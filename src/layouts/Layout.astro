---
import Score from '../components/Score.jsx';
import Rules from "../components/Rules.astro"
import Game from '../components/Game.jsx';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Barlow+Semi+Condensed:wght@600;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[radial-gradient(circle_at_top,_var(--tw-gradient-stops))]  from-BackgroundGradientStart via-BackgroundGradientStart to-BackgroundGradientEnd">
		<div id="app" class="relative h-screen p-2 gap-2 xs:grid">
			<header class="[grid-area:top] flex-col flex items-center justify-center content-center w-11/12 sm:w-full m-4">
				<Score client:load/>
			</header>
			<main class="[grid-area:game] rounded-lg overflow-hidden flex items-center justify-center z-40 w-full basis-3/5" >
				<Game client:load/>
			</main>
			<section class="[grid-area:rules] flex items-end mb-4 z-0 justify-center sm:justify-end">
				<Rules/>
			</section> 
		</div>
	</body>
</html>

<style>
	#app {
		display: grid;
		grid-template-areas: 
			"top top rules"
			"game game rules";
		grid-template-columns: 150px 1fr 100px;
		grid-template-rows: 0.3fr 1fr ;
	}
	@media only screen and (max-width: 460px) {
		#app {
			display: flex;
			flex-direction: column;
			justify-content: space-between;
		}
	}
</style>	
<style is:global>
	html {
		font-family: 'Barlow Semi Condensed', sans-serif;
		background: #000;
		color: #fff
	}
</style>
