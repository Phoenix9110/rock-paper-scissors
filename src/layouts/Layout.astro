---
import Score from '../components/Score.astro';
import Rules from "../components/Rules.astro"
import Game from '../components/Game.jsx';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Barlow+Semi+Condensed:wght@600;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[radial-gradient(circle_at_top,_var(--tw-gradient-stops))]  from-BackgroundGradientStart via-BackgroundGradientStart to-BackgroundGradientEnd">
		<div id="app" class="relative h-screen p-2 gap-2">
			<header class="[grid-area:top] flex-col flex items-center justify-center content-center">
				<Score/>
			</header>
			<main class="[grid-area:game] rounded-lg overflow-y-hidden flex items-center justify-center">
				<Game client:load/>
			</main>
			<section class="[grid-area:rules] flex items-end mb-4">
				<Rules/>
			</section> 
	</div>
	</body>
</html>
<style>
	#app {
		display: grid;
		grid-template-areas: 
			"top top rules"
			"game game rules";
		grid-template-columns: 150px 1fr 125px;
		grid-template-rows: 0.3fr 1fr ;
	}
</style>	
<style is:global>
	html {
		font-family: 'Barlow Semi Condensed', sans-serif;
		background: #000;
		color: #fff
	}
	@font-face {
		font-family: "Barlow";
		src: url("/fonts/BarlowSemiCondensed-Bold.ttf") format("ttf");
		font-weight: 700;
		font-style: Bold;
		font-display: swap;
	}

	@font-face {
		font-family: "Barlow";
		src: url("/fonts/BarlowSemiCondensed-SemiBold.ttf") format("ttf");
		font-weight: 600;
		font-style: SemiBold;
		font-display: swap;
	}
	
</style>
